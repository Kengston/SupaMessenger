{% extends 'base.html.twig' %}

{% block title %}
    {% if selectedUser %}
        Dialog with {{ selectedUser.username }}
    {% else %}
        Select a User to start a dialog
    {% endif %}
{% endblock %}

{% block body %}
    <div class="flex h-screen bg-gray-200 text-black-600 relative">
        <!-- Sidebar -->
        <div class="overflow-auto w-1/4 bg-white border-r">
            <div class="p-5">
                <h1 class="text-lg font-bold mb-5 text-center">Select a User to start a dialog</h1>
                <ul id="user-list" class="space-y-5">
                    {% for user in users %}
                        <li class="animate__animated animate__fadeIn">
                            <a class="block py-2 px-6 hover:bg-gray-200 rounded-lg" href="{{ path('app_dialog', {id: user.id}) }}">{{ user.username }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <!-- Main Content -->

            <div class="flex-1 flex flex-col">

                <!-- Header -->

                <div class="border-b p-5 flex justify-between items-center bg-white">
                    {% if selectedUser %}
                    <h1 class="text-lg font-bold">{{ selectedUser.username }}</h1>
                    {% endif %}
                    <a href="{{ path('app_logout') }}" class="text-black-500 hover:underline ml-auto"><i class="fa-solid fa-right-from-bracket"></i></a>
                </div>
                {% if selectedUser %}

                <!-- Message List -->

                <div id="message-list" class="flex-1 overflow-auto p-5 space-y-5">
                    {% for message in messages %}
                        <div class="message-item py-2 px-6 rounded-lg max-w-lg flex flex-col space-y-3
                            {% if message.sender == selectedUser.username %}
                                mr-auto bg-blue-400 text-white animate__animated animate__fadeInRight
                            {% else %}
                                ml-auto bg-gray-100 text-gray-800 animate__animated animate__fadeInLeft
                            {% endif %}" data-message-id="{{ message.id }}">
                            <div>
                                <div class="font-semibold">{{ message.sender }}</div>
                                <div>{{ message.content }}</div>
                            </div>

                            <!-- Message Buttons -->

                            {% if message.sender != selectedUser.username %}
                                <div id="context-menu-{{ message.id }}" class="context-menu hidden opacity-0 transform transition duration-200 ease-in-out flex justify-end space-x-3 pr-10">
                                    <button class="edit-message-btn transition duration-200 ease-in-out transform hover:-translate-y-1 text-gray-600"><i class="fa-solid fa-pen-to-square"></i></button>
                                    <a href="message/delete/{{ message.id }}"><button class="delete-message-btn transition duration-200 ease-in-out transform hover:-translate-y-1 text-red-600" data-message-id="{{ message.id }}"><i class="fa-solid fa-trash"></i></button></a>
                                </div>
                            {% endif %}

                        </div>
                    {% endfor %}








                </div>

                <!-- Message Form -->
                <form id="message-form" class="border-t p-5" action="" method="post">
                    {{ form_start(messageForm) }}
                    <div class="flex items-center justify-center">
                        <!-- Emoji button -->
                        <button type="button" class="flex items-center px-3 bg-gray-200 rounded-lg focus:outline-none">
                            <i class="far fa-smile text-gray-600"></i>
                        </button>
                        <!-- Image button -->
                        <button type="button" class="flex items-center px-3 bg-gray-200 rounded-lg focus:outline-none">
                            <i class="far fa-image text-gray-600"></i>
                        </button>
                        <!-- Input field (textarea) -->
                        {{ form_widget(messageForm.content, {'attr': {'class': 'form-textarea flex-grow rounded-lg py-2 px-12 mx-2 resize-vertical'}}) }}
                        <!-- Submit button -->
                        <button type="submit" class="px-5 py-2 bg-blue-500 text-white rounded-lg"><i class="far fa-paper-plane"></i></button>
                    </div>
                    {{ form_end(messageForm) }}
                </form>

            </div>
            {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {% if selectedUser %}

        <script>
            const eventSource = new EventSource("{{ mercure('/dialog/user/' ~ currentUser.id)|escape('js') }}");

            eventSource.onmessage = function(event) {
                const data = JSON.parse(event.data);
                const messageList = document.getElementById('message-list');
                const newMessage = document.createElement('div');
                newMessage.classList.add('message-item', 'py-2', 'px-6', 'rounded-lg', 'max-w-lg');

                if (data.sender === '{{ currentUser.username }}') {
                    newMessage.classList.add('ml-auto', 'bg-blue-400', 'text-white', 'animate__animated', 'animate__fadeInRight');
                } else {
                    newMessage.classList.add('mr-auto', 'bg-gray-100', 'text-gray-800', 'animate__animated', 'animate__fadeInLeft');
                }

                newMessage.innerHTML = `<div class="font-semibold">${data.sender}</div><div>${data.content}</div>`;
                messageList.appendChild(newMessage);
            };

            let contextMenuDisplayed = false;

            function showContextMenu(menu, x, y) {
                menu.style.display = 'block';
                setTimeout(function() {
                    menu.style.opacity = '1';
                    menu.style.transform = 'translateY(0px)';
                }, 20);
                menu.style.left = `${x}px`;
                menu.style.top = `${y}px`;
                contextMenuDisplayed = true;
            }

            function hideContextMenu(menu) {
                menu.style.opacity = '0';
                menu.style.transform = 'translateY(-10px)';
                setTimeout(function() {
                    menu.style.display = 'none';
                }, 200);
                contextMenuDisplayed = false;
            }

            function messageContextMenuListener(e) {
                e.preventDefault();
                const contextMenu = this.querySelector('.context-menu');
                contextMenuDisplayed ? hideContextMenu(contextMenu)
                    : showContextMenu(contextMenu, e.clientX, e.clientY);

            }

            window.onload = function() {
                const messageList = document.getElementById('message-list');
                messageList.scrollTop = messageList.scrollHeight;

                const messageItems = document.querySelectorAll('.message-item');
                messageItems.forEach(item => item.addEventListener('contextmenu', messageContextMenuListener));
            };
        </script>
    {% endif %}
{% endblock %}

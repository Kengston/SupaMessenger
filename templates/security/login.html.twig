{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen bg-gray-200">
        <div class="animate__animated animate__fadeIn bg-white rounded-lg shadow-md p-8 max-w-md w-full">
            <form method="post" class="space-y-6">
                {% if error %}
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="text-3xl font-semibold text-center mb-6">Please sign in</h1>

                <div>
                    <label for="inputUsername" class="block text-sm font-medium text-gray-700">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-input mt-1 block w-full rounded-md shadow-sm" autocomplete="username" required autofocus>
                </div>

                <div>
                    <label for="inputPassword" class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-input mt-1 block w-full rounded-md shadow-sm" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600 transition duration-300" type="submit">Sign in</button>
            </form>

            <div class="mt-4 text-center">
                <span class="text-sm">Don't have an account?</span>
                <a href="{{ path('app_register') }}" class="text-blue-500 hover:text-blue-600">Register</a>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
    Register
{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-screen bg-gray-200">
        <div class="animate__animated animate__fadeIn bg-white rounded-lg shadow-md p-8 max-w-md w-full">
            <h1 class="text-3xl font-semibold text-center mb-6">Register</h1>

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            {{ form_errors(registrationForm) }}
            <div>
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-input mt-1 block w-full rounded-md shadow-sm'}}) }}
            </div>
            <div>
                {{ form_row(registrationForm.username, {'attr': {'class': 'form-input mt-1 block w-full rounded-md shadow-sm'}}) }}
            </div>
            <div>
                {{ form_row(registrationForm.password, {
                    'attr': {'class': 'form-input mt-1 block w-full rounded-md shadow-sm'}
                }) }}
            </div>
            <div>
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <button class="w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600 transition duration-300" type="submit">Register</button>
            {{ form_end(registrationForm) }}

            <div class="mt-4 text-center">
                <span class="text-sm">Already have an account?</span>
                <a href="{{ path('app_login') }}" class="text-blue-500 hover:text-blue-600">Sign in</a>
            </div>
        </div>
    </div>
{% endblock %}
